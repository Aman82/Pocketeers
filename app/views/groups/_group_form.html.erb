<%= form_for @group do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :topic %>
	<%= f.collection_select(:curriculum_id, Curriculum.all, :id, :title) %>

	<%= f.label :location %>
	<%= f.text_field :location %>

	<%= f.label :start_date %>
	<%= f.date_select :start_date %>

	<%= f.label :end_date %>
	<%= f.date_select :end_date %>

	<%= f.submit %>
<% end %>
